<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Animated Circle with dynamic icon inside -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <!-- Rotating ProgressBar (larger) -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminateTint="@color/accent_color"
                style="?android:attr/progressBarStyle" />

            <!-- AI think icon (default) -->
            <ImageView
                android:id="@+id/aiThinkIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_ai_think"
                android:visibility="visible" />

            <!-- Calendar icon (for Samsung Calendar) - smaller -->
            <ImageView
                android:id="@+id/calendarIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_calendar"
                android:visibility="gone" />

            <!-- Skull text (for Kernel Exploit) -->
            <TextView
                android:id="@+id/skullText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸ’€"
                android:textSize="14sp"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Status Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galaxy AI Agent"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processing your request..."
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>